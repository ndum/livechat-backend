{
    "name": "livechat-backend",
    "version": "2.0.0",
    "description": "Modern live chat backend with TypeScript, Prisma, and clean architecture",
    "type": "module",
    "main": "dist/server.js",
    "scripts": {
        "dev": "tsx watch src/server.ts",
        "build": "tsc",
        "start": "node dist/server.js",
        "start:prod": "cross-env NODE_ENV=production node dist/server.js",
        "prisma:generate": "prisma generate",
        "prisma:studio": "prisma studio",
        "prisma:push": "prisma db push",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest --coverage",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "format": "prettier --write \"src/**/*.{ts,json}\"",
        "format:check": "prettier --check \"src/**/*.{ts,json}\"",
        "typecheck": "tsc --noEmit",
        "clean": "rimraf dist",
        "prebuild": "npm run clean && npm run prisma:generate"
    },
    "author": "Nicolas Dumermuth",
    "license": "MIT",
    "keywords": [
        "chat",
        "livechat",
        "websocket",
        "typescript",
        "express",
        "prisma",
        "mongodb",
        "rest-api",
        "jwt",
        "real-time"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/ndum/livechat-backend"
    },
    "bugs": {
        "url": "https://github.com/ndum/livechat-backend/issues"
    },
    "dependencies": {
        "@prisma/client": "^6.19.0",
        "bcryptjs": "^3.0.3",
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "express": "^5.1.0",
        "express-rate-limit": "^8.2.1",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.2",
        "pino": "^10.1.0",
        "pino-pretty": "^13.1.2",
        "reflect-metadata": "^0.2.2",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1",
        "ws": "^8.18.3",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.5",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^24.10.1",
        "@types/supertest": "^6.0.3",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.8",
        "@types/ws": "^8.18.1",
        "@vitest/coverage-v8": "^4.0.13",
        "@vitest/ui": "^4.0.13",
        "cross-env": "^10.1.0",
        "eslint": "^9.18.0",
        "eslint-config-prettier": "^10.0.1",
        "prettier": "^3.4.2",
        "prisma": "^6.19.0",
        "rimraf": "^6.1.2",
        "supertest": "^7.1.4",
        "tsx": "^4.20.6",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.21.0",
        "vitest": "^4.0.13"
    },
    "engines": {
        "node": ">=22"
    }
}
